<h1>Cats</h1>
<%= link_to "Add new cat", new_cat_path %>
<div class="cats-list">
  <ul>
  <% @cats.each do |cat| %>
    <li><%= link_to cat.name, cat_path(cat) %> 
      <span class='birth-date'>
        <%= cat.birth_date.strftime("%Y %d %b") if cat.birth_date %>
      </span>
    </li>
  <% end %>
  </ul>
</div>

